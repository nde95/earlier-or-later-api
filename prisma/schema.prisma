// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Image {
  id Int @id @map("_id")
  userId String @unique
  imageId String
  takenDate DateTime 
  uploader Uploader? @relation(fields: [userId], references: [username])
}

model Uploader {
  username String @id @map("_id")
  realName String?
  images Image?
}

